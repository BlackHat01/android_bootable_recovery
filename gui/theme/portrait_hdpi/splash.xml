<?xml version="1.0"?>
<recovery>
	<details>
		<resolution width="1440" height="2560"/>
		<author>TeamWin</author>
		<title>TWRP</title>
		<description>splash screen</description>
		<themeversion>3</themeversion>
	</details>

	<resources>
		<font name="font_l" filename="RobotoCondensed-Regular.ttf" size="70"/>
		<image name="splashlogo" filename="splashlogo" retainaspect="1.3"/>
		<image name="splashteamwin" filename="splashteamwin" retainaspect="1.1"/>
	</resources>

	<variables>
		<variable name="screen_width" value="1440"/>
		<variable name="screen_height" value="2560"/>
		<variable name="background_color" value="#222222"/>
		<variable name="header_color" value="#555555"/>
		<variable name="accent_color" value="#0090CA"/>
	</variables>

	<pages>
		<page name="splash">
			<background color="%background_color%"/>

			<fill color="%header_color%">
				<placement x="0" y="0" w="%screen_width%" h="750"/>
			</fill>

			<image>
				<image resource="splashlogo"/>
				<placement x="720" y="750" placement="4"/>
			</image>

			<image>
				<image resource="splashteamwin"/>
				<placement x="720" y="2060" placement="4"/>
			</image>

			<text color="%header_color%">
				<font resource="font_l"/>
				<placement x="720" y="2100" placement="5"/>
				<text>Recovery Project %tw_version%</text>
			</text>

			<text color="%header_color%">
				<font resource="font_l"/>
				<placement x="720" y="2280" placement="5"/>
				<text>Unofficial Build with F2FS support</text>
			</text>
		</page>
	</pages>
</recovery>

